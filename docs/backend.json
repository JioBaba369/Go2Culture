        "reason": { "type": "string" },
        "reportedBy": { "type": "string" },
        "reportedUserLink": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["Open", "In Progress", "Resolved"] }
