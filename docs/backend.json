        "adminId": { "type": "string", "description": "Reference to User." },
        "action": { "type": "string" },
        "affectedEntity": { "type": "string" },
        "affectedEntityId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "details": { "type": "string" }
