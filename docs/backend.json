            "cuisine": { "type": "string" },
            "description": { "type": "string" },
            "dietary": { "type": "array", "items": { "type": "string" } },
            "allergens": { "type": "string" },
            "spiceLevel": { "type": "string", "enum": ["Mild", "Medium", "Spicy"] }
          }
        },
        "pricing": {
          "type": "object",
          "properties": {
