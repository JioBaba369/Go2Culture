
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Helpers â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn()
        && request.auth.uid == '9vjYTvqyLHSOZj27shGfhgpwgDw1';
    }

    function hasParticipants(data) {
      return data.participants is list;
    }

    function isParticipant(data) {
      return isSignedIn()
        && hasParticipants(data)
        && request.auth.uid in data.participants;
    }

    function isBookingParticipant(data) {
      return isSignedIn()
        && (request.auth.uid == data.guestId
            || request.auth.uid == data.hostId);
    }

    function onlyChanges(fields) {
      return request.resource.data
        .diff(resource.data)
        .affectedKeys()
        .hasOnly(fields);
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Users â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /users/{userId} {
      allow read: if true;
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      match /hosts/{hostId} {
        allow read: if true;
        allow write: if isOwner(userId) || isAdmin();
      }

      match /wishlist/{experienceId} {
        allow read, write: if isOwner(userId);
      }

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Host Applications â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /hostApplications/{applicationId} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      allow read, update, delete: if isAdmin();
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Experiences â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /experiences/{experienceId} {
      allow read: if true;
      allow create: if isSignedIn();

      allow update, delete: if isSignedIn()
        && (resource.data.hostId == request.auth.uid || isAdmin());
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Bookings â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /bookings/{bookingId} {

      // ğŸ” Only guest, host, or admin can read a booking
      allow get: if isBookingParticipant(resource.data) || isAdmin();

      // âœ… Must be permissive for queries (client MUST filter)
      allow list: if isSignedIn();

      // Create booking
      allow create: if isSignedIn()
        && request.resource.data.guestId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid))
            .data.termsAccepted == true;

      // Update booking
      allow update: if isBookingParticipant(resource.data) || isAdmin();

      // Prevent deletion of transaction history
      allow delete: if isAdmin();
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Reviews â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /reviews/{reviewId} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.guestId == request.auth.uid;

      allow update: if isSignedIn()
        && (resource.data.guestId == request.auth.uid || isAdmin());

      allow delete: if isAdmin();
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Messages â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /messages/{messageId} {

      // ğŸ” Only participants or admin
      allow get: if isAdmin() || isParticipant(resource.data);

      // âœ… Required for queries. Now permissive, relies on client query being secure.
      allow list: if isSignedIn();

      allow create: if isSignedIn()
        && request.resource.data.senderId == request.auth.uid
        && hasParticipants(request.resource.data)
        && request.auth.uid in request.resource.data.participants;

      allow update: if isAdmin()
        || (isSignedIn()
            && resource.data.senderId == request.auth.uid
            && onlyChanges(["text", "editedAt"]));

      allow delete: if isAdmin();
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Conversations â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /conversations/{bookingId} {

      // ğŸ” Only participants or admin
      allow get: if isAdmin() || isParticipant(resource.data);

      // âœ… Required for queries
      allow list: if isAdmin() || (isSignedIn() && request.query.where.participants.hasAny([request.auth.uid]));

      allow create: if isSignedIn()
        && hasParticipants(request.resource.data)
        && request.auth.uid in request.resource.data.participants;

      allow update: if isParticipant(resource.data) || isAdmin();

      allow delete: if isAdmin();
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Sponsors & Coupons â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /sponsors/{sponsorId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      allow get: if isSignedIn();
      allow list, create, delete: if isAdmin();

      allow update: if isAdmin()
        || (isSignedIn()
            && onlyChanges(["timesUsed"]));
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Admin Only â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

    match /reports/{reportId} {
      allow read, write: if isAdmin();
    }

    match /admin_logs/{adminLogId} {
      allow read, write: if false;
    }
  }
}
