
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ───────────────── Helpers ───────────────── */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn()
        && request.auth.uid == '9vjYTvqyLHSOZj27shGfhgpwgDw1';
    }

    function isParticipant(data) {
      return isSignedIn()
        && data.participants is list
        && request.auth.uid in data.participants;
    }
    
    function canSendMessage() {
      return !exists(/databases/$(database)/documents/users/$(request.auth.uid)/rateLimits/chat)
        || request.time >
           get(/databases/$(database)/documents/users/$(request.auth.uid)/rateLimits/chat)
             .data.lastMessageAt + duration.value(1, "s");
    }

    function isBookingParticipant(data) {
      return isSignedIn()
        && (request.auth.uid == data.guestId
            || request.auth.uid == data.hostId);
    }
    
    function isQueryingOwnConversations() {
      // Ensure the query filters for conversations where the user is a participant.
      return request.query.where[0][0] == 'participants'
        && request.query.where[0][1] == 'array-contains'
        && request.query.where[0][2] == request.auth.uid;
    }

    function onlyChanges(fields) {
      return request.resource.data
        .diff(resource.data)
        .affectedKeys()
        .hasOnly(fields);
    }
    
    function isQueryingOwnBookings() {
        return (request.query.where[0][0] == 'guestId' && request.query.where[0][2] == request.auth.uid) 
            || (request.query.where[0][0] == 'hostId' && request.query.where[0][2] == request.auth.uid);
    }

    /* ───────────────── Users ───────────────── */

    match /users/{userId} {
      allow read: if true;
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      match /hosts/{hostId} {
        allow read: if true;
        allow write: if isOwner(userId) || isAdmin();
      }

      match /wishlist/{experienceId} {
        allow read, write: if isOwner(userId);
      }

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      
      match /rateLimits/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    /* ───────────────── Host Applications ───────────────── */

    match /hostApplications/{applicationId} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;

      allow read, update, delete: if isAdmin();
    }

    /* ───────────────── Experiences ───────────────── */

    match /experiences/{experienceId} {
      allow read: if true;
      allow create: if isSignedIn();

      allow update, delete: if isSignedIn()
        && (resource.data.hostId == request.auth.uid || isAdmin());
    }

    /* ───────────────── Bookings ───────────────── */

    match /bookings/{bookingId} {
      allow get: if isBookingParticipant(resource.data) || isAdmin();
      allow list: if isAdmin() || isQueryingOwnBookings();
      allow create: if isSignedIn()
        && request.resource.data.guestId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid))
            .data.termsAccepted == true;

      allow update: if isBookingParticipant(resource.data) || isAdmin();
      allow delete: if isAdmin();
    }

    /* ───────────────── Reviews ───────────────── */

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.guestId == request.auth.uid;
      allow update: if isSignedIn()
        && (resource.data.guestId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    /* ───────────────── Conversations ───────────────── */

    match /conversations/{conversationId} {
      allow get: if isAdmin() || isParticipant(resource.data);
      allow list: if isAdmin() || isQueryingOwnConversations();
      allow create: if isSignedIn()
          && request.resource.data.bookingId is string
          && let booking = get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId))
          && booking.exists()
          && request.resource.data.participants.hasAll([booking.data.guestId, booking.data.hostId])
          && request.resource.data.participants.size() == 2
          && request.resource.data.bookingId == conversationId;

      allow update: if isAdmin() || (
          isSignedIn()
          && isParticipant(resource.data)
          && onlyChanges(["lastMessage", "readBy", "updatedAt"])
          && request.resource.data.readBy[request.auth.uid] is timestamp
      );
      
      allow delete: if isAdmin();

      /* ───────── Messages Subcollection ───────── */
      match /messages/{messageId} {
        allow get, list: if isAdmin() || isParticipant(get(/databases/$(database)/documents/conversations/$(conversationId)).data);
        allow create: if isSignedIn()
            && canSendMessage()
            && request.resource.data.senderId == request.auth.uid
            && request.resource.data.bookingId == conversationId;

        allow update, delete: if false;
      }
    }


    /* ───────────────── Sponsors & Coupons ───────────────── */

    match /sponsors/{sponsorId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /coupons/{couponId} {
      allow get: if isSignedIn();
      allow list, create, delete: if isAdmin();
      allow update: if isAdmin()
        || (isSignedIn()
            && onlyChanges(["timesUsed"]));
    }

    /* ───────────────── Admin Only ───────────────── */

    match /reports/{reportId} {
      allow read, write: if isAdmin();
    }

    match /admin_logs/{adminLogId} {
      allow read, write: if false;
    }
  }
}

    